@{
    Layout = "_Layout";
}

@model SQL_Crud.Areas.LOC_Country.Models.LOC_CountryModel

<div class="container w-50">
    @{
        String buttonName = "";
        if(ViewBag.Data != null)
        {
            ViewBag.Data = "Edit Country Details";
            buttonName = "Save";
        }
        else
        {
            ViewBag.Data = "Add new Country";
            buttonName = "Add";
        }
    }

    <h3>@ViewBag.Data</h3>
    <form method="post" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Save">
      @*  <input type="hidden" asp-for="CountryID" />*@
        @Html.HiddenFor(x => x.CountryID)
        <div class="mb-3">
            <label class="form-label"><span class="text-danger fw-bold">*</span>Country Name :</label>
            <input type="text" class="form-control" id="CountryName" name="CountryName" asp-for="CountryName" />
            <span class="form-text text-danger" asp-validation-for="CountryName"></span>
        </div>
        <div class="mb-3">
            <label class="form-label"><span class="text-danger fw-bold">*</span>Country Code :</label>
            <input type="text" class="form-control" id="CountryCode" asp-for="CountryCode" />
            <span class="form-text text-danger" asp-validation-for="CountryCode"></span>
        </div>
        <button type="submit" class="btn btn-primary">@buttonName</button>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}