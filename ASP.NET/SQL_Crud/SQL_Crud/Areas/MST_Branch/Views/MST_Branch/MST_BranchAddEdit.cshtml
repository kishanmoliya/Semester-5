@{
    Layout = "_Layout";
}

@model SQL_Crud.Areas.MST_Branch.Models.MST_BranchModel

<div class="container w-50">
    <form method="post" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="Save">
        @*  <input type="hidden" asp-for="CountryID" />*@
        @Html.HiddenFor(x => x.BranchID)
        <div class="mb-3">
            <label class="form-label"><span class="text-danger fw-bold">*</span>Branch Name :</label>
            <input type="text" class="form-control" id="CountryName" name="BranchName" asp-for="BranchName" />
            <span class="form-text text-danger" asp-validation-for="BranchName"></span>
        </div>
        <div class="mb-3">
            <label class="form-label"><span class="text-danger fw-bold">*</span>Branch Code :</label>
            <input type="text" class="form-control" id="CountryCode" asp-for="BranchCode" />
            <span class="form-text text-danger" asp-validation-for="BranchCode"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}