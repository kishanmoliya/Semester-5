@{
    Layout = "_Layout";
}
<h1>@ViewBag.sname</h1>
<div class="Container">
    <nav class="navbar bg-body-tertiary mb-2">
        <div class="container-fluid">
            <form class="d-flex w-50" role="search" asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentSearch">
                <input class="form-control me-2" type="text" placeholder="Search by Student name" aria-label="Search" name="StudentName">x`x`
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <form method="post" asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentAddEdit">
                <button type="submit" class="btn btn-outline-primary"><i class="bi bi-plus"></i>New Student</button>
            </form>
        </div>
    </nav>
    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <th scope="col">Student Name</th>
                <th scope="col">Branch Name</th>
                <th scope="col">Mobilr No.</th>
                <th scope="col">Email</th>
                <th scope="col">Created Date</th>
                <th scope="col">Modified Date</th>
                <th scope="col" colspan="2" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow data in Model.Rows)
            {
                <tr>
                    <td>@data["StudentName"]</td>
                    <td>@data["BranchName"]</td>
                    <td>@data["MobileNoStudent"]</td>
                    <td>@data["Email"]</td>
                    <td>@Convert.ToDateTime(data["Created"]).ToString("dd MMM, yyyy")</td>
                    <td>@data["Modified"]</td>
                    <td class="text-end">
                        <form method="post" asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentAddEdit" asp-route-StudentID="@data["StudentID"]">
                            <button type="submit" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i></button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentDelete" asp-route-StudentID="@data["StudentID"]">
                            <button type="submit" class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

